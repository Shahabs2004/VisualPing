<Window x:Class="VisualPing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualPing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="405">
    <Grid Margin="10,0,10,7">
        <Canvas x:Name="pingGraph" Width="360" Height="360" Background="Black" Margin="10,10,38,57">
            <Canvas.Effect>
                <DropShadowEffect Color="#FF656565"/>
            </Canvas.Effect>
        </Canvas>
        <TextBox x:Name="Address" HorizontalAlignment="Left" Margin="29,384,0,0" TextWrapping="Wrap" Text="10.7.1.1" VerticalAlignment="Top" Width="271" Height="30" TextChanged="Address_TextChanged"/>
        <Button x:Name="Ping" Content="Ping" HorizontalAlignment="Left" Margin="325,389,0,0" VerticalAlignment="Top" Click="Button_Click" Width="59"/>

    </Grid>
</Window>
